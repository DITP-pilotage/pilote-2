{
  "customSyntax": "postcss-styled-components",
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-standard-scss",
    "stylelint-config-recess-order"
  ],
  "ignoreFiles": [
    ".next/**/*"
  ],
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "selector-class-pattern": "^([a-zà-ú][a-zà-ú0-9]*)(-[a-zà-ú0-9]+)*$",
    "value-keyword-case": null
  }
}
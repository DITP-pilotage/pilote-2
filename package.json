{
  "name": "ditp-pilote",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "18"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "postinstall": "prisma generate",
    "postdeploy": "prisma migrate deploy",
    "start": "next start",
    "lint": "prisma generate && eslint 'src/**/*.{ts,tsx}' && npx tsc && npx stylelint 'src/**/*.styled.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix && npx stylelint 'src/**/*.styled.{ts,tsx}' --fix",
    "test": "npm run test:client && npm run test:server",
    "test:ci": "bash scripts/test_ci.sh",
    "test:client": "jest src/client",
    "test:client:coverage": "jest --collectCoverage --collectCoverageFrom=src/client/**/*.{ts,tsx} src/client",
    "test:client:unit": "jest --passWithNoTests src/client/.*.unit.test.*",
    "test:client:integration": "jest src/client/.*.integration.test.*",
    "test:server": "npm run test:server:unit && npm run test:server:integration",
    "test:server:unit": "jest --passWithNoTests src/server/.*.unit.test.*",
    "test:server:domain:coverage": "jest --collectCoverage --collectCoverageFrom=src/server/domain/**/*.ts src/server/domain/.*.test.*",
    "test:server:infrastructure:coverage": "jest --collectCoverage --config=jest.integration.config.js --collectCoverageFrom=src/server/infrastructure/**/*.ts src/server/infrastructure/.*.test.*",
    "test:server:integration": "jest --config=jest.integration.config.js src/server/.*.integration.test.*",
    "test:database:init": "dotenv -e .env.test -- npm run database:init -- --force",
    "database:init": "prisma migrate reset"
  },
  "browserslist": {
    "production": [
      ">0.2% in FR",
      "last 5 years",
      "not IE <= 11",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@faker-js/faker": "^7.6.0",
    "@gouvfr/dsfr": "^1.8.5",
    "@prisma/client": "^4.9.0",
    "@tanstack/react-table": "^8.7.9",
    "d3-selection": "^3.0.0",
    "d3-zoom": "^3.0.0",
    "dotenv-cli": "^7.0.0",
    "dsfr-chart": "^0.1.1",
    "next": "^13.1.6",
    "nextjs-basic-auth-middleware": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/d3-selection": "^3.0.3",
    "@types/d3-zoom": "^3.0.1",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "eslint": "^8.33.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-next": "^13.1.6",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-sonarjs": "^0.18.0",
    "eslint-plugin-testing-library": "^5.10.0",
    "eslint-plugin-unicorn": "^45.0.2",
    "geojson2svg": "^1.3.3",
    "jest": "^29.4.1",
    "jest-environment-jsdom": "^29.4.1",
    "postcss-styled-components": "^0.2.1",
    "prisma": "^4.9.0",
    "proj4": "^2.8.1",
    "reproject": "^1.2.7",
    "sass": "^1.58.0",
    "stylelint": "^14.16.1",
    "stylelint-config-recess-order": "^3.1.0",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-config-standard-scss": "^6.1.0",
    "stylelint-order": "^6.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}

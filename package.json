{
  "name": "ditp-pilote",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "18"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "postinstall": "prisma generate",
    "postdeploy": "prisma migrate deploy",
    "start": "next start",
    "lint": "eslint 'src/**/*.{ts,tsx}' && npx tsc && npx stylelint 'src/**/*.scss'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix && npx stylelint 'src/**/*.scss'",
    "test": "npm run test:client && npm run test:server",
    "test:ci": "bash scripts/test_ci.sh",
    "test:client": "jest src/client",
    "test:client:unit": "jest --passWithNoTests src/client/.*.unit.test.*",
    "test:client:integration": "jest src/client/.*.integration.test.*",
    "test:server": "npm run test:server:unit && npm run test:server:integration",
    "test:server:unit": "jest --passWithNoTests src/server/.*.unit.test.*",
    "test:server:integration": "jest --config=jest.integration.config.js src/server/.*.integration.test.*",
    "database:init": "prisma migrate reset"
  },
  "browserslist": {
    "production": [
      ">0.2% in FR",
      "last 5 years",
      "not IE <= 11",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "dependencies": {
    "@faker-js/faker": "^7.6.0",
    "@gouvfr/dsfr": "^1.8.5",
    "@prisma/client": "^4.8.0",
    "@tanstack/react-table": "8.7.0",
    "dotenv-cli": "^6.0.0",
    "next": "^13.0.7",
    "nextjs-basic-auth-middleware": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.1.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/node": "^18.11.17",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "eslint": "^8.30.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-next": "^13.0.7",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.7",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-sonarjs": "^0.17.0",
    "eslint-plugin-testing-library": "^5.9.1",
    "eslint-plugin-unicorn": "^45.0.2",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "prisma": "^4.8.0",
    "sass": "^1.57.1",
    "stylelint": "^14.16.0",
    "stylelint-config-recess-order": "^3.1.0",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-config-standard-scss": "^6.1.0",
    "stylelint-order": "^5.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
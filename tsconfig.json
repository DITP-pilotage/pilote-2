{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src",
    "paths": {
      "@/components/*": [
        "client/components/*"
      ],
      "@/client/*": [
        "client/*"
      ],
      "@/hooks/*": [
        "hooks/*"
      ],
      "@/server/*": [
        "server/*"
      ],
      "@/stores/*": [
        "client/stores/*"
      ],
      "@/validation/*": [
        "validation/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    },
    "require": [
      "tsconfig-paths/register"
    ],
    "transpileOnly": true
  }
}